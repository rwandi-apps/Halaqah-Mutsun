rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Izinkan semua operasi (read, write) hanya untuk user yang login.
    // Aturan ini cukup untuk aplikasi manajemen internal dengan data lama.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
